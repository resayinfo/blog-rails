<%= form_for @admin, url: action do |f| %>

<% if @admin.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @admin.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <h3>
    <%= f.label :first_name %>
  </h3>
  <p>
    <%= f.text_field :first_name %>
  </p>

  <h3>
    <%= f.label :last_name %>
  </h3>
  <p>
    <%= f.text_field :last_name %>
  </p>

  <h3>
    <%= f.label :email %>
  </h3>
  <p>
    <%= f.email_field :email %>
  </p>

  <h3>
    <%= f.label :password %>
  </h3>
  <p>
    <%= f.password_field :password %>
  </p>

  <h3>
    <%= f.submit class: 'btn btn-default' %>
  </h3>
  <h3>
    <%= link_to 'Cancel', admins_path, class: 'btn btn-primary' %>
  </h3>

<% end %>
