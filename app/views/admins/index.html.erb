<h1 class="page-header">Administrators</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>
        <% if can? :create, User %>
          <%= link_to 'New Administrator', new_admin_path, class: 'btn btn-success' %>
        <% end %>
      </th>
      </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
    <tr>
      <td><%= link_to admin.name, admin_path(admin) %></td>
      <td>
        <% if can? :manage, admin %>
          <%= link_to 'Edit', edit_admin_path(admin), class: 'btn btn-default btn-xs' %>
          <%= link_to 'Delete', admin_path(admin), method: :delete, data: { confirm: 'Are you sure you want to delete this administrator?' }, class: 'btn btn-xs btn-danger' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
