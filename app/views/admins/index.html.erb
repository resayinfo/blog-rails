<h1 class="articles-index-header">Administrators</h1>

<table>
  <tr>
    <th class="articles-index-table-headlines">Name</th>
    <th class="articles-index-table-headlines">Email</th>
    <th colspan="3">
      <% if can? :create, User %>
        <%= link_to 'New Administrator', new_admin_path, class: 'btn btn-success' %>
      <% end %>
    </th>
  </tr>
  <% @admins.each do |admin| %>
    <tr>
      <td><%= admin.name %></td>
      <td class="articles-index-lefty"><%= admin.email %></td>
      <% if can? :manage, admin %>
        <td><%= link_to 'Show', admin_path(admin), class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_admin_path(admin), class: 'btn btn-default' %></td>
        <td><%= link_to 'Delete', admin_path(admin) , class: 'btn btn-danger',
                method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
