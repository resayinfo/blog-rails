<h1>Listing Articles</h1>

<h3>
  <%= link_to 'Home', root_path, class: 'btn btn-primary' %>
  <%= link_to 'New article', new_article_path, class: 'btn btn-primary' %>
</h3>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"><%= (image_tag 'trek.gif', class:'articles-header-pic-1') %></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td class="articles-index-lefty"><%= article.text %></td>
    <td><%= link_to 'Show', article_path(article), class: 'btn btn-default' %></td>
    <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-default' %></td>
    <td><%= link_to 'Destroy', article_path(article) , class: 'btn btn-default',
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
