<h1><%= current_user.email %></h1>

<h2 class="articles-show-sub-header"><%= @article.title %></h2>

<h2 class="articles-show-title">
  <%= @article.title %>
</h2>

<p class="articles-show-lefty">
  <%= @article.text %>
</p>
<!-- <a href="<%= @article.text %>" target="_blank"><%= @article.text %></a> -->
<!-- <iframe width="940" height="480" src="<%= @article.text %>" frameborder="0" allowfullscreen></iframe> -->

<% if can? :update, @article %>
  <h3>
    <%= link_to 'Edit Article', edit_article_path(@article), class: 'btn btn-primary' %>
  </h3>
<% end %>

<h3 class="comments">Comments</h3>
  <%= render @article.comments %>
<% if can? :update, @comment %>
  <h3 class="comment">Add a comment:</h3>
    <%= render "comments/form" %>
<% end %>

<h3><%= link_to 'Back to Articles', articles_path, class: 'btn btn-primary' %></h3>
