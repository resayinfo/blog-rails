<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin' }) do |f| %>
  <h2>Forgot your password?</h2>

  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, class: 'form-control password' %>

  <%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-lg btn-block' %>

  <%= render "devise/shared/links" %>

<% end %>
