<h1 class="articles-index-header">Superadmins</h1>

<table>
  <tr>
    <th class="articles-index-table-headlines">Name</th>
    <th class="articles-index-table-headlines">Email</th>
    <th colspan="3">
      <% if can? :create, User %>
      <%= link_to 'New Superadmin', new_superadmin_path, class: 'btn btn-success' %>
      <% end %>
    </th>
  </tr>
  <% @superadmins.each do |superadmin| %>
  <tr>
    <td><%= superadmin.name %></td>
    <td class="articles-index-lefty"><%= superadmin.email %></td>
    <% if can? :manage, superadmin %>
    <td><%= link_to 'Show', superadmin_path(superadmin), class: 'btn btn-default' %></td>
    <td><%= link_to 'Edit', edit_superadmin_path(superadmin), class: 'btn btn-default' %></td>
    <td><%= link_to 'Delete', superadmin_path(superadmin) , class: 'btn btn-danger',
    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
  <% end %>
</table>
